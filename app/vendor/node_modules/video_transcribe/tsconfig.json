{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "target": "es5",
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ]
}